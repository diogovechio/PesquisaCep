<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PesquisaCep.Registros"
             Title="Registros">
    <ContentPage.Content>
        <StackLayout BackgroundColor="white" >
            
            <Button Text="Apagar Histórico"
                    x:Name="btnApagar"
                    Clicked="ClickApagar"/>
            
            <Label Text="Registros Salvos"
                FontSize="Large"
                Padding="30,0"
                TextColor="Gray"
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Nenhum registro salvo."
                   x:Name="listaCEP"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>